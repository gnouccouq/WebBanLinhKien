@model PagedList.IPagedList<ProjectCCS.Models.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Trang Chủ";
}

<section class="banner  flex jc-c ai-c container">
    <div class="banner__text">
        <h2 class="title">CCM Technology</h2>
        <h2 class="title">Website bán Laptop và linh kiện điện tử hàng đầu Việt Nam</h2>
        <p><i class="fa fa-quote-left" aria-hidden="true"></i> Sự hài lòng của bạn là mục tiêu của chúng tôi !<i class="fa fa-quote-right" aria-hidden="true"></i> <span class="author">Công Cường Minh</span></p>
        <a href="/" class="button">Bạn đang tìm kiếm gì?</a>
    </div>
    <div class="banner__img"></div>
</section>

<!-- Services -->
<section class="services container mt-5">
    <h1 class="main_title">CAM KẾT DỊCH VỤ</h1>
    <div class="services__items flex jc-sa ai-c mt-3">
        <div class="services__item">
            <div class="item-content">
                Giao hàng tận nơi
            </div>
            <img src="~/app/img/Giaohang.jpg" alt="">
            <div class="item-detail">
                Chúng tôi sẽ giao hàng ở mọi nơi. Dù bạn có ở trong ngỏ hay trong hẻm!
            </div>
        </div>
        <div class="services__item">
            <img src="~/app/img/tannoi.jpg" alt="">
            <div class="item-content">
                Giao đúng sản phẩm, đúng hẹn
            </div>
            <div class="item-detail">
                Chỉ cần chọn mốc giờ khi đặt hàng, cam kết giao đúng sản phẩm, đúng hẹn.
            </div>
        </div>
        <div class="services__item">
            <div class="item-content">
                Sự hài lòng
            </div>
            <img src="~/app/img/hailong.jpg" alt="">
            <div class="item-detail">
                Sự hài lòng của bạn là niềm vui và giúp chúng tôi không ngừng phát triển để tạo sự uy tín cho khách hàng.
            </div>
        </div>
    </div>
</section>
@Html.Partial("~/Views/Shared/_HotProduct.cshtml");