@model ProjectCCS.Model.ResetPasswordModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="quenmatkhau container">
    <table align="center" ">
        <h4 class="text-center" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;color:red;font-size:30px;margin-top:20px">QUÊN MẬT KHẨU</h4>
        @using (Html.BeginForm())
        {
            <tr style="height:40px">
                <td style="margin-right:20px">Vui lòng nhập Email dùng để đăng ký tài khoản</td>
                <br />
                <td style="width:290px">
                    @Html.TextBox("Email", "", new { @class = "form-control" })
                </td>
            </tr>
            <tr style="height:40px;">
                <td></td>
                <td>
                    <input type="submit" value="Gửi" class="btn btn-danger" style="border: 2px solid; border-radius: 10px; margin-top: 15px;" />
                </td>
            </tr>
        }
    </table>
</div>
<style>
    .quenmatkhau {
        margin-top: 100px;
        border: 2px solid #ff0000;
        width: 700px;
        border-radius: 10px;
        height: 200px;
        margin-bottom: 170px;
    }
</style>

